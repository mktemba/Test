{
  "name": "mahjong-learning-app",
  "version": "1.0.0",
  "description": "Interactive Mahjong learning application with comprehensive e2e testing",
  "main": "learn-mahjong.html",
  "scripts": {
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest --coverage",
    "test:unit:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:coverage": "jest --coverage --coverageReporters=html",
    "test:all": "npm run test:unit && npm run test:e2e",
    "serve": "node server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mktemba/Test.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/mktemba/Test/issues"
  },
  "homepage": "https://github.com/mktemba/Test#readme",
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@playwright/test": "^1.56.1",
    "@types/jest": "^30.0.0",
    "babel-jest": "^30.2.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "playwright": "^1.56.1"
  }
}
